<div class="page-header">
  <h1>Our Subscribers ðŸ‘¥</h1>
  <p>Meet our cooking community members</p>
</div>

<div class="stats-box">
  <h3>ðŸ“Š Subscriber Statistics</h3>
  <p><strong>Total Subscribers:</strong> <%= subscribers.length %></p>
  <p><strong>Database:</strong> confetti_cuisine</p>
  <p><strong>Collection:</strong> subscribers</p>
</div>

<% if (subscribers.length === 0) { %>
  <div class="empty-state">
    <h3>No subscribers yet!</h3>
    <p>Be the first to join our cooking community.</p>
    <a href="/contact" class="button">Subscribe Now</a>
  </div>
<% } else { %>
  <div class="list-container">
    <% subscribers.forEach(subscriber => { %>
      <div class="subscriber">
        <div class="subscriber-info">
          <p>
            <span class="item-label">Name:</span>
            <strong><%= subscriber.name %></strong>
          </p>
          <p>
            <span class="item-label">Email:</span>
            <%= subscriber.email %>
          </p>
          <p>
            <span class="item-label">ZIP Code:</span>
            <%= subscriber.zipCode %>
          </p>
          <p>
            <span class="item-label">Subscribed:</span>
            <%= new Date(subscriber.subscribedDate).toLocaleDateString() %>
          </p>
        </div>

        <form action="/subscribers/delete/<%= subscriber._id %>" method="POST" style="margin-top: 15px;">
          <button type="submit" class="button-delete" onclick="return confirm('Are you sure you want to delete this subscriber?')">
            Delete
          </button>
        </form>
      </div>
    <% }); %>
  </div>
<% } %>

<div style="text-align: center; margin-top: 40px;">
  <a href="/contact" class="button">Add New Subscriber</a>
</div>
